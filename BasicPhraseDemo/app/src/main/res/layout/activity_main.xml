<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:gravity="fill">

            <Button
                android:id="@+id/button1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="phraseButtons"
                android:text="Bon appetit!" />

            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="phraseButtons"
                android:text="I would&#10;love to!" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:gravity="fill">

            <Button
                android:id="@+id/button3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="phraseButtons"
                android:text="I'm sure!" />

            <Button
                android:id="@+id/button4"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="phraseButtons"
                android:text="Of course!" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:gravity="fill">

            <Button
                android:id="@+id/button5"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="phraseButtons"
                android:text="Please leave&#10;me alone!" />

            <Button
                android:id="@+id/button6"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="phraseButtons"
                android:text="What a shame!" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:gravity="fill">

            <Button
                android:id="@+id/button7"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="phraseButtons"
                android:text="You don't say!" />

            <Button
                android:id="@+id/button8"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="phraseButtons"
                android:text="Can you&#10;help me?" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Welcome to a basic phrase app (Spanish)"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>